@model List<Product>

<a asp-controller="Home" asp-action="Index" class="btn btn-primary">
    Back to Home Page
</a>
<a asp-controller="Product" asp-action="Add" class="btn btn-success">
    Add a New Stock
</a>
<br /><br />

@if (Model.Count() < 1)
{
    <div class="alert alert-info">
        No Product Records Found.
    </div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>Stock</th>
                <th>Type</th>
                <th>Price</th>
                <th>Qty</th>
                <th>Supplier</th>
                <th>Date Stocked</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Stock</td>
                    <td>@item.Type</td>
                    <td>@item.Price</td>
                    <td>@item.Qty</td>
                    <td>@item.Supplier</td>
                    <td>@item.DateStocked</td>
                    <td>
                        <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.ID"
                          class="btn btn-info btn-sm">
                           Edit
                        </a>
                        
                        @*<form asp-controller="Product" asp-action="Delete" method="post">
                            <input type="hidden" name="Id" value="@item.ID">
                            <input type="submit" class="btn btn-danger btn-sm" value="Delete">
                        </form>*@
                        <button class="btn btn-danger btn-sm deleteBtn" data-id="@item.ID">
                            Delete
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
<form id="DeleteForm" asp-controller="Product" asp-action="Delete" method="post">
    <input type="hidden" id="HiddenProductId" name="Id" value"" />
</form>
@section Scripts {
    <script>
           $('.deleteBtn').click(function(e) {
               swal({
                   title: "Remove Stock",
                   text: "Stock will be permanently deleted if proceed",
                   icon: "warning",
                   buttons: true,
                   dangerMode: true
               }).then((confirm) => {
                   if (confirm) {
                       var btn = $(this);
                       var id = btn.data("id");
                       $("#HiddenProductId").val(id);
                       $("#DeleteForm").submit();
                   }
               });
           });
    </script>
}



