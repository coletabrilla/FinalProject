@model ProductVM

<h3>Add a Stock</h3>


<form asp-controller="Product" asp-action="Add" method="post">
    <label asp-for="Stock"></label>
    <input type="text" asp-for="Stock" class="form-control" />
    <span asp-validation-for="Stock" class="text-danger"></span>
    <br /><br />

    <label asp-for="Type"></label>
    <input type="text" asp-for="Type" class="form-control" />
    <span asp-validation-for="Type" class="text-danger"></span>
    <br /><br />

    <label asp-for="Price"></label>
    <input type="text" asp-for="Price" class="form-control" />
    <span asp-validation-for="Price" class="text-danger"></span>
    <br /><br />

    <label asp-for="Qty"></label>
    <input type="text" asp-for="Qty" class="form-control" />
    <span asp-validation-for="Qty" class="text-danger"></span>
    <br /><br />

    <label asp-for="Supplier"></label>
    <input type="text" asp-for="Supplier" class="form-control" />
    <span asp-validation-for="Supplier" class="text-danger"></span>
    <br /><br />

    

    <label asp-for="DateStocked">Date Stocked</label>
    <input type="hidden" asp-for="DateStocked" value="Utc.Now" />
    <br />


    <br /><br />

    <a asp-controller="Product" asp-action="Index" class="btn btn-primary">
        Back
    </a>
    <input type="submit" value="Add Product" class="btn btn-success" />
</form>



